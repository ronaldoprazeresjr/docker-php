{
    "name": "php/skeleton",
    "description": "PHP skeleton",    
    "authors": [
        {
            "name": "Ronaldo Prazeres JÃºnior",
            "email": "ronaldoprazeresjr@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*"        
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/specs"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "vendor/bin/phpunit"
    }
}
