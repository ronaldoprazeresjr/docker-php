{
    "name": "php/skeleton",
    "description": "PHP skeleton",    
    "authors": [
        {
            "name": "Ronaldo Prazeres JÃºnior",
            "email": "ronaldoprazeresjr@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*"        
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^0.8.1",
        "phpstan/extension-installer": "^1.0.5",
        "phpstan/phpstan": "^0.12.58",
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
